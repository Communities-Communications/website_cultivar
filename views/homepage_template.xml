<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	
		<template name="Homepage" priority="29" t-name="website.homepage">
			<t t-call="website.layout">

				<div class="container">
					<div class="col-xs-6 col-sm-4 col-md-8 bg-claro cal-border">
						<div class="col-md-2">
							<span t-esc="today[4]"/><br/>
							<span t-esc="today[5]"/>
						</div>
						<div class="col-md-8">
							Textblblablalbalb
							<hr/>
							Textblblablablbal
						</div>
						<div class="col-md-2">
							Textblblablablbal
							<hr/>
							<span t-esc="today[1]"/>
							<hr/>
							<span t-esc="today[0]"/>
						</div>
					</div>

					<!-- Calendar start generated by python -->
					<t t-foreach="calendar" t-as="cal">
        				<div class="col-xs-6 col-sm-4 col-md-2 bg-claro cal-border">
            				<div class="tpdia-txt">
                				<span t-esc="cal[2]"/>
            				</div>
            				<hr class="hr-claro"/>
            				<div>
               					<div class="col-md-6 temps-text">
                    				IMG
								<hr style="border: 0.5px solid white; margin-bottom:0%; margin-top:0%"/>
									15ºC
									10ºC
								</div>
								<div class="col-md-6">
									<div class="dia-txt">
										<span t-esc="cal[1]"/>
									</div>
									<div class="ndia-txt">
										<span t-esc="cal[0]"/>
									</div>
								</div>
							</div>
        				</div>
					</t>
       			</div>

			<!-- code -->
			<ul>
				<t t-foreach="events" t-as="event">
					<li>
						<span t-esc="event.name"/>
						<span t-esc="event.date_begin"/>
						<span t-esc="event.date_end"/>
					</li>
				</t>
			</ul>
			<ul>
				<t t-foreach="calendar" t-as="cal">
					<li>
						<span t-esc="cal[0]"/>
						<span t-esc="cal[1]"/>
						<span t-esc="cal[2]"/>
					</li>
				</t>
			</ul>
			<!-- code -->
			</t>
		</template>
			
	</data>
</odoo>
