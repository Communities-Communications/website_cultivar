<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	
		<template name="Homepage" priority="29" t-name="website.homepage">
			<t t-call="website.layout">

				<div class="container">
					<!-- Current Day Code -->
					<!-- <div class="col-xs-12 col-sm-12 col-md-6 today-bg border day-border same_height-divs" style = "min-height:159.39px; max-height:159.39px"> -->
						<div class="col-xs-12 col-sm-6 col-md-2 c_month_year-text same_height-divs">
							<span t-esc="today[4]"/><br/>
							<span t-esc="today[5]"/>
						</div>
						<div class="col-xs-12 col-sm-6 col-md-4 same_height-divs">
							<div class="col-md-12">
								Textblblablalbalb
							</div>
							<hr class="today-text-hr"/>
							<span t-esc="today[2]"/>
						</div>
						<div class="col-xs-6 col-sm-4 col-md-2 same_height-divs">
							<div class="today-align-text">
								Texto
							</div>
							<hr class="today-hr"/>
							<div class="today_week_day-text">
								<span t-esc="today[1]"/>
							</div>
							<hr class="today-hr" style="vertical-align: middle;"/>
							<div class="today-text">
								<span t-esc="today[0]"/>
							</div>
						</div>
					<!-- </div> -->
					<!-- End of Current Day -->

					<!-- Calendar start generated by python -->
					<t t-set="isdone" t-value="False"/>
					<t t-foreach="calendar" t-as="cal">
						<div t-if="cal_index == 2">
							<t t-set="isdone" t-value="True"/> 
							<div class="col-xs-12 col-sm-8 col-md-4 ultimas-bg day-border same_height-divs">
								<div class="clearfix ult-txt-tit">
									ULTIMAS
								</div>
								<div class="clearfix ult-txt-res">
									AVISO DE CANDIDATURA<br/>
									Para se candidatar precisa...........<br/><br/>
									Em Janeiro sobe ao outeiro. Se vires verdejar,
									põe-te a chorar. Se vires terrear põe-te a contar.<br/>
								</div>
							</div>
						</div>
        				<div class="col-xs-6 col-sm-4 col-md-2 weekday-bg day-border same_height-divs">
            				<div class="clearfix event_day-text" style="height:35px">
								<div t-if="cal[0] == 1">
									<span t-esc="cal[4]"/>
									<span t-esc="cal[5]"/>
								</div>
                				<span t-esc="cal[2]"/>
            				</div>
            				<hr class="weekday-hr"/>
            				<div class="clearfix" style="margin-top: -5%;">
               					<div class="col-xs-12 col-sm-6 col-md-6 temp_day-text">
                    				IMG
								<hr class="temps-hr"/>
									15ºC
									10ºC
								</div>
								<div class="col-xs-12 col-sm-6 col-md-6">
									<div class="week_day-text">
										<span t-esc="cal[1]"/>
									</div>
									<div class="day-text">
										<span class="day-text" t-esc="cal[0]"/>
									</div>
								</div>
							</div>
        				</div>
					</t>
					<!-- End of Calendar generated by python -->

       			</div>

			<!-- EVENTS & Days
			<ul>
				<t t-foreach="events" t-as="event">
					<li>
						<span t-esc="event.name"/>
						<span t-esc="event.date_begin"/>
						<span t-esc="event.date_end"/>
					</li>
				</t>
			</ul>
			<ul>
				<t t-foreach="calendar" t-as="cal">
					<li>
						<span t-esc="cal[0]"/>
						<span t-esc="cal[1]"/>
						<span t-esc="cal[2]"/>
					</li>
				</t>
			</ul>
			 END Code of EVENTS & DAYS -->
			</t>
		</template>
			
	</data>
</odoo>
